{
  "name": "atool-doc",
  "version": "0.3.0",
  "description": "Static demo site generator based on atool-build & dora.",
  "keywords": [
    "atool",
    "doc"
  ],
  "author": "jaredleechn <jaredleechn@gmail.com>",
  "homepage": "https://github.com/ant-tool/atool-doc",
  "repository": {
    "type": "git",
    "url": "https://github.com/ant-tool/atool-doc"
  },
  "bugs": {
    "url": "https://github.com/ant-tool/atool-doc/issues"
  },
  "license": "ISC",
  "main": "index.js",
  "files": [
    "lib",
    "bin",
    "tpl"
  ],
  "bin": {
    "atool-doc": "./bin/atool-doc.js"
  },
  "scripts": {
    "build": "rm -rf lib && ./node_modules/.bin/babel src --out-dir lib --ignore __tests__",
    "dev": "./node_modules/.bin/babel src --out-dir lib --watch --ignore __tests__",
    "doc": "node bin/atool-doc.js --port 8987",
    "lint": "eslint src",
    "eslint-fix": "eslint --fix src",
    "gh-pages": "npm run doc -- --build && gh-pages -d __site",
    "pub": "npm run build && npm publish && npm run gh-pages",
    "beta": "npm run build && npm publish --tag beta && npm run gh-pages",
    "test": "npm run lint",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "peerDependencies": {
    "dora": "~0.3.0",
    "atool-build": "~0.6.0",
    "webpack": "~1.12.2"
  },
  "dependencies": {
    "atool-doc-js-loader": "~0.1.0",
    "atool-doc-md-loader": "~0.2.0",
    "atool-doc-util": "~0.1.0",
    "atool-monitor": "0.x",
    "commander": "~2.9.0",
    "glob": "~7.0.3",
    "html-webpack-plugin": "~2.9.0",
    "koa-webpack-dev-middleware": "~1.1.0",
    "style-loader": "~0.13.0"
  },
  "devDependencies": {
    "babel-cli": "~6.6.5",
    "babel-plugin-add-module-exports": "~0.1.2",
    "babel-preset-es2015": "~6.6.0",
    "babel-preset-stage-0": "~6.5.0",
    "eslint": "^2.0.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^5.0.1",
    "gh-pages": "~0.11.0",
    "pre-commit": "~1.1.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "pre-commit": [
    "lint"
  ]
}
